<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjemploXamarinForms.ContenedorLayouts"
             
             Title="Ejemplo General"
             >
  
  <StackLayout>
    <TableView x:Name="listadoComponentes" Intent="Menu">
      <TableRoot Title="Data Form">
        <TableSection Title="Layouts">
          <TextCell
            Text="AbsoluteLAyout"
            Command="{Binding IraCommando}"
            CommandParameter="AbsoluteLayout"
          />
          <TextCell
           Text="GridLayout"
           Command="{Binding IraCommando}"
           CommandParameter="GridLayout"
          />
          <TextCell
          Text="RelativeLayout"
          Command="{Binding IraCommando}"
          CommandParameter="RelativeLayout"
          />
          <TextCell
         Text="StackLayout"
         Command="{Binding IraCommando}"
         CommandParameter="StackLayout"
          />
        </TableSection>
     
      </TableRoot>
    </TableView>


  </StackLayout>

</ContentPage>