<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjemploXamarinForms.VisualizadorXaml"
             Title="Visualizar Xaml"
             >
  <ScrollView>
    <Label x:Name="label">
      <Label.FontFamily>
        <!-- Android font doesn't work -->
        <OnPlatform x:TypeArguments="x:String" iOS="Courier New" Android="Droid Sans Mono" WinPhone="Courier New" />
      </Label.FontFamily>
      <Label.FontSize>
        <OnPlatform x:TypeArguments="x:Double" iOS="10" Android="20" WinPhone="20" />
      </Label.FontSize>
    </Label>
  </ScrollView>
</ContentPage>