<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjemploXamarinForms.Views.Editor"
             Title="Editor View"
             >
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness" iOS="0,40,0,0" Android="0,40,0,0" />
  </ContentPage.Padding>
  <StackLayout>
    <Label  Text="Ejemplo de Editor" FontSize="Medium" HorizontalOptions="Center"  />
    <Editor x:Name="memo" Text="Hola soy un editor, puedo recibir varias lineas de texto" VerticalOptions="Center" HorizontalOptions="Center" />
  </StackLayout>
</ContentPage>