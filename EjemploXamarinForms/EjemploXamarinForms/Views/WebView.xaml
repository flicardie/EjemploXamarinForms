<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjemploXamarinForms.Views.WebView"
             Title="WebView"
             >
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness" iOS="0,40,0,0" Android="0,40,0,0" />
  </ContentPage.Padding>
  <StackLayout>
    <Label Text="Ejemplo WebView" FontSize="Medium" HorizontalOptions="Center" />
    <WebView x:Name="Browser"  Source="http://www.google.com"  />
  </StackLayout>
</ContentPage>