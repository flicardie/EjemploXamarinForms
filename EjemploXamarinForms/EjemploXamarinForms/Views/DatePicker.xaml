<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjemploXamarinForms.Views.DatePicker"
             Title="DataPicker View"
             >
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness" iOS="0,40,0,0" Android="0,40,0,0" />
  </ContentPage.Padding>
  <StackLayout>
    <Label Text="Ejemplo de DatePicker" FontSize="Medium" HorizontalOptions="Center"   />
    <DatePicker x:Name="dtPicker" Format="yyyy-MM-dd" HorizontalOptions="Center" DateSelected="datePickerOnDateSelected"  />
  </StackLayout>
</ContentPage>