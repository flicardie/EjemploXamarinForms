<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjemploXamarinForms.Views.TableViewIntentSettings" Title="Table View (Intent Settings)">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness" iOS="0,40,0,0" Android="0,40,0,0" />
  </ContentPage.Padding>
  <StackLayout>
    <TableView x:Name="tableView" Intent="Settings">
      <TableRoot Title="Data Form">
        <TableSection Title="Opciones">
          <SwitchCell Text="Are you a programmer?" On="False" />
          <SwitchCell Text="Conectarse a Internet?" On="True" />
          <SwitchCell Text="Enviar automáticamente" On="True" />
        
        </TableSection>
      </TableRoot>
    </TableView>


  </StackLayout>
  
</ContentPage>